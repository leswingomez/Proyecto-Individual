<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.com.smartgeeks.appimc.MainActivity"
    android:background="@drawable/fondo1">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora IMC"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/tvTitulo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_marginTop="40dp"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="30dp"
        android:hint="Ingrese su peso (kg)"
        android:id="@+id/etPeso"
        android:inputType="number"
        android:background="#FFFFFF"
        android:layout_below="@+id/tvTitulo"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Calcular"
        android:id="@+id/btnCalcular"
        android:layout_below="@+id/etTalla"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:text="Resultado"
        android:layout_below="@+id/btnCalcular"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:inputType="numberDecimal"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="30dp"
        android:hint="Ingrese su estatura (m)"
        android:id="@+id/etTalla"
        android:background="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etPeso"
       />
</RelativeLayout>
